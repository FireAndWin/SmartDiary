<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/imageView_startItem_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/default_icon"
    />

    <TextView
        android:id="@+id/textView_startItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="?attr/title_color"
        android:text="记录项名称"
        android:textStyle = "bold"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_startItem_icon"

        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view_startItem_recent"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/textView_startItem_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#03A9F4"/>

    <!--最近记录时间相关-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_startItem_recent">
        <CheckBox
            android:id="@+id/checkbox_startItem_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/textView_startItem_latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近记录时间"
            android:textColor="?attr/tip_color"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/checkbox_startItem_done"
            app:layout_constraintTop_toBottomOf="@id/view_startItem_recent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
