<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_startItem_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="59dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_startItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录项名称"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_startItem_icon"

        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view_startItem_recent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/textView_startItem_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#03A9F4"/>

    <CheckBox
        android:id="@+id/checkbox_startItem_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_startItem_recent"/>

    <TextView
        android:id="@+id/textView_startItem_latest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近记录时间"
        app:layout_constraintLeft_toRightOf="@id/checkbox_startItem_done"
        app:layout_constraintTop_toBottomOf="@id/view_startItem_recent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
