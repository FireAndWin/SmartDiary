<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_start_tab"
        android:background="@drawable/tab_start_menuicon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/textView_start_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@drawable/tab_start_menutext"
        app:layout_constraintTop_toBottomOf="@id/imageView_start_tab"/>

</androidx.constraintlayout.widget.ConstraintLayout>